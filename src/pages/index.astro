---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <section class="hero">
    <h1 class="hero-title">PICANTE FM</h1>
    <p class="hero-tagline">We made it spicy for you.</p>
  </section>

  <section class="player">
    <h2 class="section-label">Listen</h2>
    <div class="player-embed">
      <iframe
        width="100%"
        height="400"
        src="https://www.mixcloud.com/widget/iframe/?hide_cover=1&light=1&feed=%2Fpicante_fm%2F"
        frameborder="0"
        allow="autoplay"
        title="PICANTE on Mixcloud"
        loading="lazy"
      ></iframe>
    </div>
  </section>

  <section class="cta">
    <p>Full archive on <a href="https://www.mixcloud.com/picante_fm/" target="_blank" rel="noopener">Mixcloud&nbsp;&rarr;</a></p>
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 6rem 0 4rem;
  }

  .hero-title {
    font-size: clamp(2rem, 8vw, 10rem);
    font-weight: 700;
    letter-spacing: 0.02em;
    line-height: 1;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary),
      var(--color-accent)
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-tagline {
    margin-top: 1rem;
    font-size: 1.125rem;
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
  }

  .player {
    padding: 2rem 0;
  }

  .section-label {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .player-embed {
    border-radius: 8px;
    overflow: hidden;
    background: var(--color-surface);
  }

  .player-embed iframe {
    display: block;
  }

  .cta {
    text-align: center;
    padding: 2rem 0 4rem;
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  .cta a {
    color: var(--color-primary);
    font-weight: 500;
    transition: color 0.2s;
  }

  .cta a:hover {
    color: var(--color-secondary);
  }
</style>
