---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "PICANTE â€” a radio show bringing heat from the underground." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={Astro.url.href} />
    <title>{title} | PICANTE</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | PICANTE`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="site-nav">
      <a href="/" class="logo">PICANTE FM</a>
      <ul class="nav-links">
        <li><a href="/" aria-current={currentPath === "/" ? "page" : undefined}>Home</a></li>
        <li><a href="/about" aria-current={currentPath === "/about" ? "page" : undefined}>About</a></li>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>&copy; {new Date().getFullYear()} PICANTE</p>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
